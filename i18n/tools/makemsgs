# description:
#
# creates the main imscp.pot file out of any found strings in the php files
#
# Warning: This script will remove any strings which aren't present in the GUI
# php files, this means dynamic strings or strings out of the database will
# ignored.
#

set -e

if [ $1 ] && [ -d $1 ]; then
	GUI=${1}
else
	GUI=../../gui
fi

if [ ! -f ${GUI}/public/index.php ]; then
	if [ -f ${GUI}/gui/index.php ]; then
		GUI=${GUI}/gui/
	fi
fi

if [ ! -f ${GUI}/public/index.php ]; then
	echo "${GUI} isn't a valid gui/ location."
	exit 1
fi

# PHP files
/usr/bin/xgettext \
--foreign-user \
--language=PHP \
-d "i-MSCP" \
--keyword="tr" \
--no-location \
${GUI}/library/*.php \
${GUI}/library/iMSCP/*.php \
${GUI}/library/iMSCP/*/*.php \
${GUI}/library/iMSCP/*/*/*.php \
${GUI}/library/resources/i18n/zend.php \
${GUI}/library/iMSCP/View/Helpers/Functions/*.php \
${GUI}/public/*.php \
${GUI}/public/*/*.php \
--from-code=utf-8 \
-p ../po \
-o "iMSCP.pot"

# XML files
/usr/bin/xgettext \
--foreign-user \
--language=Glade \
-d "i-MSCP" \
--copyright-holder="iMSCP Team - All rights reserved" \
--package-name="i-MSCP" \
--package-version="1.0.1.6" \
--msgid-bugs-address="i18n@i-mscp.net" \
--keyword="label" \
--no-location \
${GUI}/themes/*/*/*.xml \
-p ../po \
-o "iMSCP.pot" -j -s

sed --in-place '/#. Please ignore this entry/d' ../po/iMSCP.pot
sed --in-place 's/msgid "encoding"/#. Please ignore this entry\nmsgid "encoding"/' ../po/iMSCP.pot

exit 0
